<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceX" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextviewStyle_Header">
        <item name="android:gravity">center|start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">@dimen/horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/horizontal_margin</item>
        <item name="android:paddingTop">@dimen/horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/horizontal_margin</item>
    </style>

    <style name="CardView_Style">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">3dp</item>
        <item name="cardMaxElevation">3dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>